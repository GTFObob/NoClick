{
  "manifest_version": 2,

  "name": "NoClick",
  "description": "This extension finds a TL;DR",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Save yourself a click."
  },

  "permissions": [
    "activeTab",
    "contextMenus",
    "tabs",
    "http://*/"
  ],
  "background": {
    "scripts": ["noClick.js"]
  },

}